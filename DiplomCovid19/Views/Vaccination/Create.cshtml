@model EmployeeVaccineJunction

@{
    Layout = "_Layout";
}

<h3 class="p-2 bg-primary text-white text-center">Добавление нового курса вакцинации @ViewBag.Employee.FIO</h3>

<form asp-action="CreateNewCourse" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.Employee.Id" />
    <div class="form-group">
        <label asp-for="Vaccine"></label>
        <select class="form-control" asp-for="VaccineId">
            <option disabled selected>-- Выберете вид вакцины --</option>}
            @foreach (Vaccine v in ViewBag.Vaccines)
            {
                <option value="@v.Id">@v.VaccineName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DateFirstComponent"></label>
        <input type="date" asp-for="DateFirstComponent" value="" />
    </div>
    <div class="form-group">
        <label asp-for="DateSecondComponent"></label>
        <input type="date" asp-for="DateSecondComponent" value="" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="CreateNewCourse" asp-route-key="@ViewBag.Employee.Id" class="btn btn-secondary">Cancel</a>
    </div>
</form>

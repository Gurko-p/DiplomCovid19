@model IEnumerable<AppUser>

@{ Layout = "_Layout";}


<div class="my-own-container">

    <div class="info-employee-line"><p>Список пользователей</p></div>
    <table class="table table-bordered">
        <thead>
            <tr class="text-center"><th>Имя пользователя</th><th>Email</th><th>Действие</th></tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">Нет Аккаунтов Пользователей</td></tr>
            }
            else
            {
                foreach (AppUser user in Model)
                {
                    <tr class="text-center">
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    Удалить
                                </button>
                                <a class="btn btn-outline-warning" asp-action="Edit"
                                   asp-route-id="@user.Id">Редактировать</a>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <a class="btn btn-outline-primary" asp-action="Create">Добавить пользователя</a>
</div>
